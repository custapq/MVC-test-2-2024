generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Costume {
  Id            Int         @id // เลข 6 หลัก ห้าม 0 นำหน้า
  costumeTypeId Int
  durability    Int //ความคงทน
  isRepaired    Boolean //เก็บว่าถูกซ่อมรึยัง
  costumeType   CostumeType @relation(fields: [costumeTypeId], references: [id])
}

model CostumeType {
  id      Int       @id @default(autoincrement())
  name    String // ทรงพลัง ลอบเร้น ปกปิดตัวตน
  costume Costume[]
}
